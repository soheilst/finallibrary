<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">
    <TextView
            android:id="@+id/txt"
            android:layout_width="327dp"
            android:layout_height="185dp"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintVertical_bias="0.852"/>
    <Button

            android:text="sub"
            android:layout_width="129dp"
            android:layout_height="43dp"
            android:id="@+id/btn1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.502"/>
    <Button
            android:text="confirm"
            android:layout_width="129dp"
            android:layout_height="43dp"
            android:id="@+id/btn2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/unsub" app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintVertical_bias="0.07"/>
    <Button
            android:text="unsub"
            android:layout_width="129dp"
            android:layout_height="43dp"
            android:id="@+id/unsub" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toTopOf="@+id/txt" app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/Status"/>
    <Button
            android:text="status"
            android:layout_width="129dp"
            android:layout_height="43dp"
            android:id="@+id/Status" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="108dp"
            app:layout_constraintBottom_toTopOf="@+id/txt" app:layout_constraintHorizontal_bias="0.502"/>
    <Button
            android:text="charkh"
            android:layout_width="129dp"
            android:layout_height="43dp"
            android:id="@+id/charck" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/txt" app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/unsub"/>

</android.support.constraint.ConstraintLayout>